@model IEnumerable<BW4.Models.Prodotto>

@{
    ViewData["Title"] = "Gestione Prodotti";
}

<h2>Gestione Prodotti</h2>

<a asp-action="Crea">Aggiungi Nuovo Prodotto</a>

<table>
    <thead>
        <tr>
            <th>Nome</th>
            <th>Prezzo</th>
            <th>Categoria</th>
            <th>Azioni</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var prodotto in Model)
    {
        <tr>
            <td>@prodotto.NomeProdotto</td>
            <td>@prodotto.Prezzo.ToString("C")</td>
            <td>@prodotto.CategoriaID</td>
            <td>
                <a asp-action="Modifica" asp-route-id="@prodotto.ProdottoID">Modifica</a> |
                <form asp-action="Elimina" method="post" style="display:inline;">
                    <input type="hidden" name="id" value="@prodotto.ProdottoID" />
                    <button type="submit">Elimina</button>
                </form>
            </td>
        </tr>
    }
    </tbody>
</table>
