@model IEnumerable<BW4_progetto.Models.Product>

<div class="container mt-4">
    <div class="row">
        @foreach (var product in Model)
        {
            <div class="col-md-4">
                <div class="card mb-4">
                    <div class="card-body">
                        <h5 class="card-title">@product.Name</h5>
                        <p class="card-text">@product.Price.ToString("C")</p>
                        <a href="@Url.Action("Edit", "Admin", new { id = product.ProductId })" class="btn btn-primary">Modifica</a>
                    </div>
                </div>
            </div>
        }
    </div>
    <div class="row">
        <div class="col-12 text-center">
            <a href="@Url.Action("Create", "Admin")" class="btn btn-success mt-4">Aggiungi Nuovo Prodotto</a>
        </div>
    </div>
</div>
