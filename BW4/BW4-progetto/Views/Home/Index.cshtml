@model IEnumerable<BW4_progetto.Models.Product>

@{
    ViewData["Title"] = "Home Page";
}

<div class="jumbotron text-center">
    <h1 class="display-4">Elevate Your Tech Gadget Game</h1>
    <p class="lead">Shop the latest technology available here in e-shop. Sale & discount offers everyday.</p>
    <a class="btn btn-primary btn-lg" href="#" role="button">Shop Now</a>
</div>

<div class="container marketing">
    <div class="row justify-content-center">
        @foreach (var product in Model)
        {
            <div class="col-lg-3 col-md-4 col-sm-6">
                <div class="product-card">
                    <div class="image-container">
                        <img src="@product.ImageUrl" alt="@product.Name" class="img-fluid">
                    </div>
                    <a href="@Url.Action("Details", "Home", new { id = product.ProductId })" class="product-name">@product.Name</a>
                    <div class="icons">
                        <div class="icon">
                            <i class="fas fa-heart"></i>
                        </div>
                        <div class="icon">
                            <i class="fas fa-share-alt"></i>
                        </div>
                    </div>
                    <p class="price">$@product.Price</p>
                    <button class="btn-cart" onclick="showQuantityPopup(this, @product.ProductId, '@product.Name')">Add to Cart</button>
                    <div class="badge">New</div>
                </div>
            </div>
        }
    </div>
</div>

<div id="quantity-popup" class="quantity-popup">
    <h5 id="popup-product-name"></h5>
    <input type="number" id="popup-quantity" value="1" min="1">
    <i class="fas fa-shopping-cart cart-icon" onclick="addToCartWithQuantity()"></i>
</div>

@section Scripts {
    <script src="~/js/cart.js"></script>
    <script>
        function showQuantityPopup(button, productId, productName) {
            var popup = $('#quantity-popup');
            var offset = $(button).offset();
            $('#popup-product-name').text(productName);
            $('#popup-quantity').val(1);
            popup.data('product-id', productId);
            popup.css({
                top: offset.top + $(button).height() + 10,
                left: offset.left
            }).fadeIn();
        }

        function addToCartWithQuantity() {
            var productId = $('#quantity-popup').data('product-id');
            var quantity = $('#popup-quantity').val();
            addToCart(productId, quantity);
            $('#quantity-popup').fadeOut();
        }

        $(document).mouseup(function (e) {
            var popup = $('#quantity-popup');
            if (!popup.is(e.target) && popup.has(e.target).length === 0) {
                popup.fadeOut();
            }
        });
    </script>
}
